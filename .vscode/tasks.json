{
	"version": "2.0.0",
	"type": "shell",
	"cwd": "${workspaceFolder}",
	"tasks": [
		{
			"label": "go-build",
			"command": "go",
			"args": [
				"build",
				"-i"
			],
			"problemMatcher": ["$go"]
		},
		{
			"label": "run",
			"command": "./b",
			"dependsOn": [
				"go-build"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				//   "reveal": "silent"
				"clear": true,
				"panel": "dedicated"
			},
		},
	],
}